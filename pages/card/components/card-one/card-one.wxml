<!--pages/card/components/card-one/card-one.wxml-->
<view class="card card-1">
  <image src="{{cardInfo.client_card_cfg.avatar}}" class="avatar"></image>
  <view class="main">
    <view class="company">{{cardInfo.company_card_cfg.name}}</view>
    <view class="name">
      <text class="realname">{{cardInfo.realname}}</text>
      <text class="pro">销售顾问</text>
    </view>
    <view class="tel">
      <van-icon name="jue-call-fill" />
      <text class="txt">{{cardInfo.mobile}}</text></view>
    <view class="mail">
      <van-icon name="jue-mail-fill" />
      <text class="txt">{{cardInfo.client_card_cfg.email}}</text>
    </view>
    <view class="address">
      <van-icon name="jue-location" />
      <text class="txt">{{cardInfo.company_card_cfg.address}}</text></view>
  </view>
</view>