/* pages/shopping/shopping_index.wxss */
page{ height: 100%;background:#f0f0f0 ;}
.container{
  height: 100%;
}
swiper {
  position: relative;
  width: 100%;
  overflow: hidden;
  height: 300rpx;
}

.swiper-image {
  width: 100%;
  opacity:0.9;
}

.button-img{   
   position: relative;
   bottom: 120px;
   height: 40px;
   width: 120px;
   opacity:0.6;
}
.shopmain{ height:calc(100% - 380rpx);}
.nav {
  height: 80rpx;
  margin-bottom: 20rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  background: #fff;
  font-size: 16px;
  white-space: nowrap;
  position:relative;
  top: 0;
  left: 0;
  z-index: 99;
}
.nav-item {
  width: 20%;
  display: inline-block;
  text-align: center;
  color: #878787;
  font-size: small;
}
.nav-item.active{
  color:#0995ff; font-weight: bold ;
  font-size: medium;
}
.tab-box{
  height: 100%;
  box-sizing: border-box;
}
.tab-content{
  overflow-y: scroll;
}
scroll-view{width: 100%; height: 100%; display: block;}
.scrollview{  margin-top: 1rpx;}
.tab-content .item{
  height:180rpx;
  padding:20rpx 20rpx ;
  margin-bottom:20rpx;
  background:#fff;
  border-bottom: #f0f0f0 1px solid;
}
.tab-content .item image{
  display:block;
  float:left;
  height:180rpx;
  width:180rpx;
  margin-right:30rpx;
}
.tab-content .item .dc_con{
  float:left; width: 500rpx; text-align: left;
}
.tab-content .item text{
  display:block;
  font-size:small;
}
.tab-content .item .title{
  line-height: 35rpx;
  height: 70rpx;
  overflow: hidden;

}

.tab-content .item .detail{
  color:#999;
  font-size: small;
   height: 40rpx; line-height: 40rpx; margin-top: 10rpx;
   max-width: 100%; text-overflow: ellipsis; white-space: nowrap;
    overflow: hidden;
}
.tab-content .item .detail text{  display: inline;font-size: small; float: left;}
.tab-content .item .price{
  color:#ff8a00;
  font-size:18px;
  float: left;
  font-size: small;
   padding-top:20rpx;
   margin-right:15rpx ;
   line-height: 40rpx;
}
.tab-content .item .original_price{
  color:#ccc;
  float: left;
  font-size: small;
  padding-top: 20rpx;
  text-decoration: line-through;
   font-weight: normal;
   line-height: 40rpx;
}
.tab-content .item .price text{ display: inline; font-size: large;}
.tab-content .item .original_price text{ display: inline; font-size: medium;}
.tab-content .item .number{
  display:block;
  float:right;
  margin:20rpx 5px 0 0;
  font-size:small;
  color:#ccc;
  height: 50rpx;
  line-height:45rpx ;
  text-align: center;
}